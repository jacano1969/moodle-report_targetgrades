<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/mtgdistribute/db" VERSION="20110518" COMMENT="XMLDB file for Moodle blocks/mtgdistribute"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="report_targetgrades_alisdata" COMMENT="Table to store ALIS data" NEXT="report_targetgrades_qualtype">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" NEXT="name"/>
        <FIELD NAME="name" TYPE="text" LENGTH="small" NOTNULL="false" SEQUENCE="false" COMMENT="The name of the course used by ALIS" PREVIOUS="id" NEXT="gradient"/>
        <FIELD NAME="gradient" TYPE="number" LENGTH="6" NOTNULL="false" UNSIGNED="false" SEQUENCE="false" DECIMALS="2" COMMENT="The gradient statistic" PREVIOUS="name" NEXT="intercept"/>
        <FIELD NAME="intercept" TYPE="number" LENGTH="6" NOTNULL="false" UNSIGNED="false" SEQUENCE="false" DECIMALS="2" COMMENT="The intercept statistic" PREVIOUS="gradient" NEXT="qualtypeid"/>
        <FIELD NAME="qualtypeid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" COMMENT="The type of qualification - used to indicate which grade scale to use" PREVIOUS="intercept"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="report_targetgrades_qualtype" COMMENT="Types of qualifications and the names used by ALIS for them" PREVIOUS="report_targetgrades_alisdata" NEXT="report_targetgrades_patterns">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" NEXT="name"/>
        <FIELD NAME="name" TYPE="text" LENGTH="small" NOTNULL="false" SEQUENCE="false" COMMENT="The name used by ALIS for the type of qualification" PREVIOUS="id" NEXT="scaleid"/>
        <FIELD NAME="scaleid" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" COMMENT="The ID of the Scale used for this qualification" PREVIOUS="name"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="report_targetgrades_patterns" COMMENT="Stores patterns by which to match courses that will have MTGs calculated. Each record holds a pattern linked to a set of ALIS statistics. All courses matching that pattern will use those ALIS statistics for MTG calculations." PREVIOUS="report_targetgrades_qualtype">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" NEXT="alisdataid"/>
        <FIELD NAME="alisdataid" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" COMMENT="The ID of the ALIS data set to use for this pattern" PREVIOUS="id" NEXT="pattern"/>
        <FIELD NAME="pattern" TYPE="text" LENGTH="small" NOTNULL="false" SEQUENCE="false" COMMENT="The pattern to match courses by." PREVIOUS="alisdataid"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>